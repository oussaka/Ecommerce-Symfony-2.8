{% extends ':layout:base.html.twig' %}

{% set totalHT = 0 %}
{% set totalTTC = 0 %}
{% set refTva = {} %}
{% for produit in produits %}
    {% set refTva = refTva|merge({ ('%'~produit.tva.valeur) : 0 }) %}
{% endfor %}

{% block body %}
    <div class="container">
        <div class="row">
            {% include '@Ecommerce/Front/Default/col-left.html.twig' %}
            <div class="col-md-9">
                <h2>Votre parnier</h2>
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% if produits is empty %}
                    <p>Votre panier est vide</p>
                {% else %}
                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Références</th>
                            <th>Quantité</th>
                            <th>Prix unitaire</th>
                            <th>Total HT</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in produits %}
                            <tr>
                                <form action="{{ path('ajouter', { 'id' : produit.id }) }}" method="GET">
                                    <td>{{ produit.nom }}</td>
                                    <td>
                                        <select name="qte" class="form-control" onChange="this.form.submit()">
                                            {% for i in 1..10 %}
                                                <option value="{{ i }}" {% if i == panier[produit.id] %} selected="selected"{% endif %}>{{ i }}</option>
                                            {% endfor %}
                                        </select>
                                    </td>
                                    <td>{{ produit.prix }} €</td>
                                    <td>{{ produit.prix * panier[produit.id] }} €</td>
                                    <td><a href="{{ path('supprimer', { 'id' : produit.id }) }}"><i class="icon-trash"></i></a></td>
                                </form>
                            </tr>
                            {% set totalHT = totalHT + (produit.prix * panier[produit.id]) %}
                            {% set totalTTC = totalTTC + (produit.prix * panier[produit.id])|tva(produit.tva.multiplicate) %}
                            {% set refTva = refTva|merge({ ('%' ~ produit.tva.valeur) : refTva['%' ~ produit.tva.valeur] + (produit.prix * panier[produit.id])|montantTva(produit.tva.multiplicate) }) %}
                        {% endfor %}

                        </tbody>
                    </table>
                </form>

                <dl class="dl-horizontal pull-right">
                    <dt>Total HT :</dt>
                    <dd>{{ totalHT }} €</dd>
                    {% for key, tva in refTva %}
                        <dt>TVA {{ key }} :</dt>
                        <dd> {{ tva }} €</dd>
                    {% endfor %}
                    <dd></dd>

                    <dt>Total:</dt>
                    <dd>{{ totalTTC }} €</dd>
                </dl>
                <div class="clearfix"></div>
                <a href="{{ path('livraison') }}" class="btn btn-success pull-right">Valider mon panier</a>
                <a href="{{ path('homepage') }}" class="btn btn-primary">Continuer mes achats</a>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}