{% extends ':layout:base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            {% include '@Ecommerce/Front/Default/col-left.html.twig' %}
            <div class="col-md-9">
                <h2>Votre parnier</h2>
                {% if produits is empty %}
                    <p>Votre panier est vide</p>
                {% else %}
                <form>
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Références</th>
                            <th>Quantité</th>
                            <th>Prix unitaire</th>
                            <th>Total HT</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in produits %}
                            <tr>
                                <form action="{{ path('ajouter', { 'id' : produit.id}) }}" method="get">
                                    <td>{{ produit.nom }}</td>
                                    <td>
                                        <select name="qte" class="span1" onchange="this.form.submit()">
                                            {% for i in 1..10 %}
                                                <option value="{{ i }}" {% if i == panier[produit.id] %} selected="selected"{% endif %}>{{ i }}</option>
                                            {% endfor %}
                                        </select>
                                        <a href="{{ path('supprimer', { 'id' : produit.id }) }}"><i class="icon-trash"></i></a>
                                    </td>
                                    <td>{{ produit.prix|horstaxe(produit.tva.multiplicate) }}</td>
                                    <td>{{ produit.prix * panier[produit.id] }}</td>
                                </form>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </form>

                <dl class="dl-horizontal pull-right">
                    <dt>Total HT :</dt>
                    <dd>€</dd>

                    <dt>TVA :</dt>
                    <dd>200€</dd>

                    <dt>Total:</dt>
                    <dd>999,99€</dd>
                </dl>
                <div class="clearfix"></div>
                <a href="{{ path('livraison') }}" class="btn btn-success pull-right">Valider mon panier</a>
                <a href="{{ path('homepage') }}" class="btn btn-primary">Continuer mes achats</a>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}